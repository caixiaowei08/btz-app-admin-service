	<filter>
		<filter-name>appCrossDomainFilter</filter-name>
		<filter-class>app.btz.filter.AppCrossAomainFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>appCrossDomainFilter</filter-name>
		<url-pattern>/app/*</url-pattern>
